<div class="panel panel-default devise-bs transparent_sign_in" style="background-color: transparent;border-width: 0px">

  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: "form" }) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, placeholder:"Email", autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, placeholder:"Password", autocomplete: "off", class: "form-control" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="checkbox">
          <%= f.label :remember_me do %>
            <%= f.check_box :remember_me %>remember me
          <% end %>
        </div>
      <% end %>
      <%= f.submit  t('.sign_in', :default => "Sign in"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<div style="color: white">
<%= render "devise/shared/links" %>
</div>
