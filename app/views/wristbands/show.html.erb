<%- model_class = Wristband -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:wristband_uuid) %>:</strong></dt>
  <dd><%= @wristband.wristband_uuid %></dd>
  <dt><strong><%= model_class.human_attribute_name(:attendant_id) %>:</strong></dt>
  <dd><%= @wristband.attendant_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              wristbands_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_wristband_path(@wristband), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              wristband_path(@wristband),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
