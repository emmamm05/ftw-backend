<%= form_for @wristband, :html => { :class => "form-horizontal wristband" } do |f| %>

  <% if @wristband.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@wristband.errors.count, "error") %> prohibited this wristband from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @wristband.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :wristband_uuid, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :wristband_uuid, :class => 'form-control' %>
    </div>
    <%=f.error_span(:wristband_uuid) %>
  </div>
  <div class="form-group">
    <%= f.label :attendant_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :attendant_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:attendant_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                wristbands_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
