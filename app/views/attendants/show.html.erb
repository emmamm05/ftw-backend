<%- model_class = Attendant -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @attendant.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lastname) %>:</strong></dt>
  <dd><%= @attendant.lastname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:age) %>:</strong></dt>
  <dd><%= @attendant.age %></dd>
  <dt><strong><%= model_class.human_attribute_name(:gender) %>:</strong></dt>
  <dd><%= @attendant.gender %></dd>
  <dt><strong><%= model_class.human_attribute_name(:circle_id) %>:</strong></dt>
  <dd><%= @attendant.circle_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:wristband_id) %>:</strong></dt>
  <dd><%= @attendant.wristband_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:area) %>:</strong></dt>
  <dd><%= @attendant.area %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              attendants_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_attendant_path(@attendant), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              attendant_path(@attendant),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
