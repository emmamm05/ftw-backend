<%- model_class = Attendant -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:lastname) %></th>
      <th><%= model_class.human_attribute_name(:age) %></th>
      <th><%= model_class.human_attribute_name(:gender) %></th>
      <th><%= model_class.human_attribute_name(:circle_id) %></th>
      <th><%= model_class.human_attribute_name(:wristband_id) %></th>
      <th><%= model_class.human_attribute_name(:area) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @attendants.each do |attendant| %>
      <tr>
        <td><%= link_to attendant.id, attendant_path(attendant) %></td>
        <td><%= attendant.name %></td>
        <td><%= attendant.lastname %></td>
        <td><%= attendant.age %></td>
        <td><%= attendant.gender %></td>
        <td><%= attendant.circle_id %></td>
        <td><%= attendant.wristband_id %></td>
        <td><%= attendant.area %></td>
        <td><%=l attendant.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_attendant_path(attendant), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      attendant_path(attendant),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_attendant_path,
            :class => 'btn btn-primary' %>
